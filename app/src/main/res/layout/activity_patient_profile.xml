<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Profile information -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_profile_placeholder"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txtPatientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/txtPatientAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/txtPatientGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <TextView
            android:id="@+id/txtPatientMedicalHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medical History"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <!-- Action Buttons Table -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tableActionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:background="@drawable/table_border"
                android:padding="8dp"> <!-- Added padding for touch friendliness -->

                <!-- Book Appointment Button -->
                <TableRow>
                    <Button
                        android:id="@+id/btnBookAppointment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Book Appointment"/>
                </TableRow>

                <!-- View Past Appointments Button -->
                <TableRow>
                    <Button
                        android:id="@+id/btnViewPastAppointments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Past Appointments"/>
                </TableRow>

                <!-- Other Action Buttons can be added here -->
            </TableLayout>

        </ScrollView>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>