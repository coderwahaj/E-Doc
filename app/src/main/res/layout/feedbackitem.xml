<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/item_background_with_divider"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Doctor's Name -->
        <TextView
            android:id="@+id/textViewDoctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="2dp" />  <!-- Reduced bottom margin -->

        <!-- Doctor's Category (formerly Appointment Date) -->
        <TextView
            android:id="@+id/textViewAppointmentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />  <!-- Increased bottom margin -->

        <!-- Feedback Status -->
        <TextView
            android:id="@+id/textViewNoFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_feedback_recorded"
            android:textStyle="italic"
            android:textSize="12sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginBottom="8dp" />  <!-- Increased bottom margin to add more space -->

    </LinearLayout>

    <!-- Give Feedback Button -->
    <Button
        android:id="@+id/buttonFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/give_feedback"
        android:textSize="12sp"
        android:padding="8dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"/>
</LinearLayout>
