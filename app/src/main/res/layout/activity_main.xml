<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/user_details"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hi_baby"/>

    <Button
        android:id="@+id/logout"
        android:text="@string/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/scheduleAppointmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule_appointment"/>

    <Button
        android:id="@+id/viewAppointmentsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_appointments"/>

    <Button
        android:id="@+id/viewUpcomingAppointments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_upcoming"/>

    <Button
        android:id="@+id/btnChatWithDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chat_with_doctor"
        android:onClick="openChatActivity" />

    <Button
        android:id="@+id/btnViewMedicalHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_medical_history"
        android:onClick="openViewMedicalHistory" />

    <Button
        android:id="@+id/btnYourAppointments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_appointmentss"/>
</LinearLayout>
